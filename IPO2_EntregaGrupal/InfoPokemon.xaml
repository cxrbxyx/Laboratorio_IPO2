                    <TextBlock x:Name="txtCategoria" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Tipo:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="txtTipo" Grid.Row="2" Grid.Column="1" Margin="10,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Altura:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="txtAltura" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Peso:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="txtPeso" Grid.Row="4" Grid.Column="1" Margin="10,5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Evolución:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="txtEvolucion" Grid.Row="5" Grid.Column="1" Margin="10,5"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Tipos:" FontWeight="Bold" Margin="0,5"/>
                    <ItemsControl x:Name="icTipos" Grid.Row="6" Grid.Column="1" Margin="10,5">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Width="40" Height="40"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- Descripción -->
                <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Descripción:" FontWeight="Bold" Margin="0,5"/>
                    <TextBlock x:Name="txtDescripcion" Grid.Row="1" TextWrapping="Wrap" Margin="0,5"/>
                </Grid>
            </Grid>
